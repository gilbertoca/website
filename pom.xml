<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>io.konik</groupId>
	<artifactId>website</artifactId>
	<version>0.0.3-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<name>konik.io website</name>
	<description>The konik.io website source code.</description>
	<url>http://konik.io</url>

	<organization>
		<name>konik.io</name>
		<url>konik.io</url>
	</organization>

	<developers>
		<developer>
			<id>Vad1mo</id>
			<name>Vadim Bauer</name>
			<email>vb@konik.io</email>
		</developer>
	</developers>

	<scm>
		<url>https://github.com/konik-io/website</url>
		<connection>scm:git:git://github.com/konik-io/website.git</connection>
		<developerConnection>scm:git:git@github.com:konik-io/website.git</developerConnection>
	</scm>

	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/konik-io/website/issues</url>
	</issueManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<id>jbake-build</id>
						<phase>package</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>org.jbake.launcher.Main</mainClass>
							<arguments>
								<argument>${basedir}/src/main/website</argument>
								<argument>${project.build.directory}/${project.artifactId}-${project.version}</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>default-cli</id>
						<configuration>
							<mainClass>org.jbake.launcher.Main</mainClass>
							<arguments>
								<argument>${project.build.directory}/${project.artifactId}-${project.version}</argument>
								<argument>--server</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>

			</plugin>

			<plugin>
				<groupId>com.github.github</groupId>
				<artifactId>site-maven-plugin</artifactId>
				<version>0.9</version>
				<configuration>
					<message>Deploy baked website
						${project.artifactId}:${project.version}~${maven.build.timestamp}</message>
					<noJekyll>true</noJekyll>
					<outputDirectory>${project.build.directory}/${project.artifactId}-${project.version}</outputDirectory>
					<excludes>
						<exclude>.DS_Store</exclude>
					</excludes>
					<oauth2Token>${env.GH_TOKEN}</oauth2Token>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>site</goal>
						</goals>
						<phase>site</phase>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>src/assembly/zip.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-website-zip</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.4.2</version>
			</plugin>

			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.1</version>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.jbake</groupId>
			<artifactId>jbake-core</artifactId>
			<version>2.2.1-SNAPSHOT</version>
		</dependency>
	</dependencies>

	
</project>
